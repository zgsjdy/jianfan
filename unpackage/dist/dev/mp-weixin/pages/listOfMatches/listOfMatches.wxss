  } */
}
.scrollvi .scrlist {
  padding: 5px;
  margin: 0 1.5% 1.5% 1.5%;
  max-width: 47%;
  min-width: 47%;
  height: 26vh;
  border-radius: 10px;
  box-shadow: 0 10px 16px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  background-color: #e6f0ff;
  transition: all 0.1s;
}
.scrollvi .scrlist .top {
  width: 100%;
  height: 68%;
  margin-bottom: 2%;
}
.scrollvi .scrlist .top image {
  width: 100%;
  height: 100%;
  border-radius: 10px;
}
.scrollvi .scrlist .but {
  width: 100%;
  height: 30%;
}
.scrollvi .scrlist .but .Tips {
  width: 100%;
  height: 30%;
  text-align: center;
  color: #999999;
  font-size: 1.5vh;
  border-top: 2px solid #55ff7f;
  border-bottom: 2px solid #55ff7f;
}
.scrollvi .scrlist .but .cainame {
  width: 100%;
  height: 70%;
  display: flex;
}
.scrollvi .scrlist .but .cainame .left, .scrollvi .scrlist .but .cainame .right {
  width: 70%;
  height: 100%;
  font-size: 2.3vh;
  letter-spacing: 3px;
  border-right: 3px double grey;
}
.scrollvi .scrlist .but .cainame .right {
  width: 30%;
  font-size: 2vh;
  border-right: none;
  letter-spacing: 0px;
}
.scrollvi .scrlist:active {
  transform: scale(0.95, 0.95);
  box-shadow: none;
}
.scrollvi::-webkit-scrollbar {
  display: none;
  /* 对于WebKit浏览器隐藏滚动条 */
}